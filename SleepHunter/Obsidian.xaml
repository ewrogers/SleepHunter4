    <Style x:Key="ObsidianListBoxItem" TargetType="ListBoxItem">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Background" Value="{StaticResource ObsidianControlBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource ObsidianForeground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ObsidianSeparatorColor}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ListBox Style -->
    <Style x:Key="ObsidianListBox" TargetType="ListBox">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="ItemContainerStyle" Value="{StaticResource ObsidianListBoxItem}"/>
        <Setter Property="Background" Value="{StaticResource ObsidianControlBackground}"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <Border Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ScrollViewer Margin="0"
                                      Focusable="False"
                                      Style="{StaticResource ObsidianScrollViewer}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                            <StackPanel IsItemsHost="True"/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ListView Item -->
    <Style x:Key="ObsidianListViewItem" TargetType="ListViewItem">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource ObsidianForeground}"/>
        <Setter Property="FontFamily" Value="{StaticResource ObsidianFontFamily}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="10,2"/>
        <Setter Property="Margin" Value="0,0,0,1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Grid>
                        <Border Name="HighlightBorder"
                                Background="{DynamicResource ObsidianBackground}"
                                Opacity="0.0"/>
                        <DockPanel Background="Transparent">
                            <Border Name="SelectionBorder"
                                    Width="4"
                                    Background="{DynamicResource ObsidianBackground}"
                                    VerticalAlignment="Stretch"
                                    Panel.ZIndex="1"
                                    Visibility="Hidden"/>
                            <Border Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}">

                                <GridViewRowPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                        </DockPanel>

                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="HighlightBorder" Property="Opacity" Value="0.2"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="SelectionBorder" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="HighlightBorder" Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Grid View Column Header Gripper -->
    <Style x:Key="ObsidianGridViewColumnHeaderGripper" TargetType="Thumb">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Width" Value="18"/>
        <Setter Property="Background" Value="{DynamicResource ObsidianForeground}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border Background="Transparent">
                        <Rectangle HorizontalAlignment="Center"
                                   Width="1"
                                   Stroke="{TemplateBinding Background}"
                                   StrokeDashArray="1,3"
                                   StrokeDashOffset="3"
                                   Opacity="0.25"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Grid View Column Header -->
    <Style x:Key="ObsidianGridViewColumnHeader" TargetType="GridViewColumnHeader">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Background" Value="{DynamicResource ObsidianBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource ObsidianForeground}"/>
        <Setter Property="FontFamily" Value="{StaticResource ObsidianFontFamily}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="{StaticResource ObsidianFontWeight}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GridViewColumnHeader">
                    <Grid>
                        <Border Name="HeaderBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="0">
                            <ContentPresenter Name="HeaderContent"
                                              Margin="0,2,0,0"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              RecognizesAccessKey="True"
                                              SnapsToDevicePixels="True"/>
                        </Border>
                        <Thumb Name="PART_HeaderGripper"
                               HorizontalAlignment="Right"
                               Margin="0,0,-9,0"
                               Style="{StaticResource ObsidianGridViewColumnHeaderGripper}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ListView Style -->
    <Style x:Key="ObsidianListView" TargetType="ListView">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="Foreground" Value="{DynamicResource ObsidianForeground}"/>
        <Setter Property="Background" Value="{StaticResource ObsidianControlBackground}"/>
        <Setter Property="ItemContainerStyle" Value="{StaticResource ObsidianListViewItem}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListView">
                    <Border Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{Binding Padding}">
                        <ScrollViewer Style="{StaticResource ObsidianGridViewScrollViewer}">
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Window Control Box Style -->
    <Style x:Key="ObsidianControlBox" TargetType="Button">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource ObsidianControlBoxForeground}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Opacity" Value="0.4"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.7"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="1.0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Window Resize Grip Style -->
    <Style x:Key="ObsidianResizeGrip" TargetType="ResizeGrip">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Foreground" Value="{DynamicResource ObsidianBackground}"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ResizeGrip">
                    <Border>
                        <Path Width="16" 
                              Height="16" 
                              Fill="{TemplateBinding Foreground}"
                              Data="M 0,16 l 16,-16 v 16 z"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Window Title Thumb Style -->
    <Style x:Key="ObsidianWindowThumb" TargetType="Thumb">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Opacity" Value="0"/>
        <Setter Property="IsHitTestVisible" Value="True"/>
        <Setter Property="Focusable" Value="False"/>
    </Style>

    <!-- Window Title Border Style -->
    <Style x:Key="ObsidianWindowTitleBorder" TargetType="Border">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Background" Value="{DynamicResource ObsidianBackground}"/>
        <Setter Property="Padding" Value="10,1,10,2"/>
    </Style>

    <!-- Window Title Text Style -->
    <Style x:Key="ObsidianWindowTitle" TargetType="TextBlock">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Foreground" Value="{DynamicResource ObsidianForeground}"/>
        <Setter Property="FontFamily" Value="{StaticResource ObsidianFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource ObsidianWindowTitleFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource ObsidianFontWeight}"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="2,4"/>
    </Style>

    <!-- Window Style -->
    <Style x:Key="ObsidianWindow" TargetType="Window">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Background" Value="{DynamicResource ObsidianControlBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource ObsidianForeground}"/>
        <Setter Property="FontFamily" Value="{StaticResource ObsidianFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource ObsidianFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource ObsidianFontWeight}"/>
        <Setter Property="ResizeMode" Value="CanResizeWithGrip"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Border Name="WindowBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Margin="8">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.9" BlurRadius="16" ShadowDepth="0"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Name="WindowTitleBorder"
                                    Style="{StaticResource ObsidianWindowTitleBorder}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="32"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Name="WindowTitleText"
                                           Text="{TemplateBinding Title}"
                                           Style="{StaticResource ObsidianWindowTitle}"/>

                                    <Thumb Name="WindowTitleThumb"
                                           Grid.ColumnSpan="4"
                                           Style="{StaticResource ObsidianWindowThumb}"
                                           DragDelta="WindowThumb_DragDelta"
                                           MouseDoubleClick="WindowThumb_MouseDoubleClick"/>

                                    <Button Name="MinimizeButton"
                                            Grid.Column="1"
                                            Style="{StaticResource ObsidianControlBox}"
                                            Click="WindowMinimize_Click">
                                        <Path Stroke="{Binding ElementName=MinimizeButton, Path=Foreground}"
                                              StrokeThickness="2"
                                              Data="M 0,9 h 10"/>
                                    </Button>

                                    <Button Name="MaximizeButton"
                                            Grid.Column="2"
                                            Style="{StaticResource ObsidianControlBox}"
                                            Click="WindowMaximize_Click">
                                        <Path Stroke="{Binding ElementName=MaximizeButton, Path=Foreground}"
                                              StrokeThickness="2"
                                              Data="M 0,0 h 10 v 10 h -10 v -10 z m 0,2 h 10"/>
                                    </Button>

                                    <Button Name="CloseButton"
                                            Grid.Column="3"
                                            Style="{StaticResource ObsidianControlBox}"
                                            Click="WindowClose_Click">
                                        <Path Stroke="{Binding ElementName=CloseButton, Path=Foreground}"
                                              StrokeThickness="2"
                                              Data="M 0,10 l 10,-10 m -10,0 l 10,10"/>
                                    </Button>
                                </Grid>
                            </Border>

                            <ContentPresenter Name="ContentSite"
                                              Grid.Row="1"
                                              Margin="{TemplateBinding Padding}"
                                              Panel.ZIndex="1"/>

                            <ResizeGrip Name="WindowResizeGrip"
                                        Grid.Row="1"
                                        Style="{StaticResource ObsidianResizeGrip}"
                                        Visibility="Collapsed"
                                        Panel.ZIndex="0"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="ResizeMode" Value="CanResizeWithGrip">
                            <Setter TargetName="WindowResizeGrip" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="WindowState" Value="Maximized">
                            <Setter TargetName="WindowTitleBorder" Property="Padding" Value="12,12,12,2"/>
                            <Setter TargetName="WindowResizeGrip" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="WindowBorder" Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="6,0,6,6"/>
                            <Setter TargetName="WindowBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Opacity="0"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="ResizeMode" Value="NoResize">
                            <Setter TargetName="MinimizeButton" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="MaximizeButton" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>