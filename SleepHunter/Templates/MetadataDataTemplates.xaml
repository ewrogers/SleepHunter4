                <MultiDataTrigger.Setters>
                    <Setter TargetName="CheckBox" Property="BorderBrush" Value="{DynamicResource ObsidianBackground}"/>
                </MultiDataTrigger.Setters>
            </MultiDataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

