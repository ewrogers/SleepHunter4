<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- String ComboBox Data Template -->
    <DataTemplate x:Key="StringComboBoxDataTemplate">
        <Border>
            <Grid>
                <TextBlock Name="Text"
                           Foreground="{Binding RelativeSource={RelativeSource AncestorType=ComboBox}, Path=Foreground}"
                           Style="{StaticResource ObsidianText}"
                           Text="{Binding}"
                           FontSize="16"
                           FontWeight="Normal"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="2,3,2,2"/>
            </Grid>
        </Border>
    </DataTemplate>
    
    <!-- String Data Template -->
    <DataTemplate x:Key="StringDataTemplate">
        <Border>
            <Grid>
                <TextBlock Name="Text"
                           Style="{StaticResource ObsidianText}"
                           Text="{Binding}"
                           FontSize="16"
                           FontWeight="Normal"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="2,3,2,2"/>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>