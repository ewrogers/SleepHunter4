<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:SleepHunter.Converters">

    <!-- TimeSpan Data Template -->
    <DataTemplate x:Key="TimeSpanDataTemplate">
        <Border>
            <Grid>
                <TextBlock Name="Text"
                           Style="{StaticResource ObsidianText}"
                           Text="{Binding Converter={StaticResource TimeSpanConverter}, ConverterParameter=Fractional}"
                           FontSize="16"
                           FontWeight="Normal"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="2,3,2,2"/>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>